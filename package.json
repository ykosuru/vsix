{
  "name": "astracode",
  "displayName": "AstraCode",
  "publisher": "astracode",
  "version": "0.5.0",
  "description": "AI-powered code analysis for legacy system modernization",
  "main": "extension.js",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Chat",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "copilot",
    "chat",
    "code analysis",
    "TAL",
    "COBOL",
    "legacy",
    "modernization"
  ],
  "activationEvents": [
    "onChatParticipant:astracode.chat"
  ],
  "extensionDependencies": [
    "github.copilot-chat"
  ],
  "contributes": {
    "chatParticipants": [
      {
        "id": "astracode.chat",
        "name": "astra",
        "fullName": "AstraCode",
        "description": "AI-powered code analysis for legacy system modernization",
        "isSticky": true,
        "commands": [
          { "name": "find", "description": "Search for code by keyword" },
          { "name": "describe", "description": "Describe code functionality" },
          { "name": "deepwiki", "description": "Generate comprehensive DeepWiki docs" },
          { "name": "translate", "description": "Translate TAL/COBOL to Java" },
          { "name": "requirements", "description": "Extract requirements (Gherkin)" },
          { "name": "fediso", "description": "Fed ISO 20022 migration analysis" },
          { "name": "domain", "description": "Run domain-specific analysis" },
          { "name": "domains", "description": "List available domain prompts" },
          { "name": "history", "description": "View query history" },
          { "name": "use", "description": "Reuse results from history" },
          { "name": "generated", "description": "List generated files" },
          { "name": "clean", "description": "Delete generated files" },
          { "name": "docs", "description": "Document indexing status" },
          { "name": "stats", "description": "Show index statistics" },
          { "name": "clear", "description": "Clear index cache" },
          { "name": "rebuild", "description": "Force rebuild index" },
          { "name": "help", "description": "Show help" }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "echo 'No compile step needed'",
    "package": "vsce package",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^2.22.0"
  },
  "optionalDependencies": {
    "pdf-parse": "^1.1.1",
    "xlsx": "^0.18.5",
    "mammoth": "^1.6.0"
  }
}
