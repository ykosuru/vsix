{
  "name": "astracode",
  "displayName": "AstraCode",
  "description": "AI-powered code analysis for legacy system modernization",
  "version": "5.0.0",
  "publisher": "astracode",
  "engines": { "vscode": "^1.80.0" },
  "categories": ["Programming Languages", "Machine Learning"],
  "activationEvents": ["onStartupFinished"],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [{ "id": "astra-sidebar", "title": "AstraCode", "icon": "$(star-full)" }]
    },
    "views": {
      "astra-sidebar": [
        { "type": "webview", "id": "astra.chatView", "name": "Chat" },
        { "id": "astra.contextView", "name": "Context Files" }
      ]
    },
    "commands": [
      { "command": "astra.addToContext", "title": "Add to AstraCode Context" },
      { "command": "astra.clearContext", "title": "Clear AstraCode Context" },
      { "command": "astra.showCallGraph", "title": "AstraCode: Show Call Graph" },
      { "command": "astra.showIndexStats", "title": "AstraCode: Show Index Statistics" },
      { "command": "astra.clearIndex", "title": "AstraCode: Clear All Indexes" },
      { "command": "astra.rebuildIndex", "title": "AstraCode: Rebuild All Indexes" },
      { "command": "astra.semanticSearch", "title": "AstraCode: Semantic Search" }
    ],
    "menus": {
      "explorer/context": [{ "command": "astra.addToContext", "group": "navigation" }],
      "editor/context": [{ "command": "astra.addToContext", "group": "navigation" }]
    },
    "configuration": {
      "title": "AstraCode",
      "properties": {
        "astra.mode": {
          "type": "string", "default": "auto",
          "enum": ["auto", "local", "api"],
          "description": "Model selection mode"
        },
        "astra.searchMode": {
          "type": "string", "default": "detailed",
          "enum": ["overview", "detailed"],
          "enumDescriptions": ["Search summaries only", "Search source code"],
          "description": "Default search mode"
        },
        "astra.copilotModel": { "type": "string", "default": "", "description": "Preferred Copilot model ID" },
        "astra.apiProvider": { "type": "string", "default": "anthropic", "enum": ["anthropic", "openai"] },
        "astra.apiKey": { "type": "string", "default": "" },
        "astra.apiModel": { "type": "string", "default": "claude-sonnet-4-20250514" },
        "astra.systemPrompt": { "type": "string", "default": "", "editPresentation": "multilineText" },
        "astra.debugMode": { "type": "boolean", "default": false },
        "astra.indexing.enableAutoSummary": { "type": "boolean", "default": true },
        "astra.agent.enableJudge": { "type": "boolean", "default": true },
        "astra.agent.maxIterations": { "type": "number", "default": 10, "minimum": 1, "maximum": 25 }
      }
    }
  }
}
