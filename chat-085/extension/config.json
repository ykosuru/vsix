{
  "index": {
    "maxFileSize": 500000,
    "maxResults": 200,
    "contextLines": 3,
    "buildCallIndex": true,
    "excludePatterns": [
      "node_modules",
      "\\.min\\.js$",
      "\\.map$",
      "dist/",
      "build/"
    ]
  },
  "search": {
    "maxResults": 50,
    "maxKeywords": 5,
    "maxFilesPerQuery": 5000,
    "priorityExtensions": [".java", ".py", ".js", ".ts", ".go", ".rs", ".c", ".cpp", ".cs", ".rb", ".sql"],
    "codeExtensions": [".java", ".py", ".js", ".ts", ".tsx", ".jsx", ".go", ".rs", ".c", ".cpp", ".h", ".hpp", ".cs", ".rb", ".sql", ".kt", ".scala", ".swift"],
    "excludeFromResults": [".md", ".json", ".yaml", ".yml", ".xml", ".css"]
  },
  "fileExtensions": [
    "java", "py", "js", "ts", "tsx", "jsx", "go", "rs", "c", "cpp", "h", "hpp",
    "cs", "rb", "php", "swift", "kt", "scala", "sql", "sh", "bash",
    "md", "json", "yaml", "yml"
  ],
  "excludePattern": "**/node_modules/**"
}
