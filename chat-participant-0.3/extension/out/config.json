{
  "index": {
    "maxFileSize": 500000,
    "maxResults": 200,
    "contextLines": 3,
    "buildCallIndex": true,
    "excludePatterns": [
      "node_modules",
      "\\.min\\.js$",
      "\\.map$",
      "dist/",
      "build/"
    ]
  },
  "search": {
    "maxResults": 50,
    "maxKeywords": 5,
    "maxFilesPerQuery": 5000,
    "priorityExtensions": [".java", ".tal"],
    "codeExtensions": [".java", ".tal", ".cbl", ".cob", ".cobol", ".pli", ".c", ".cpp", ".h", ".hpp", ".cs", ".py", ".js", ".ts", ".go", ".rs", ".rb", ".sql"],
    "excludeFromResults": [".md", ".json", ".yaml", ".yml", ".xml", ".txt", ".html", ".css"]
  },
  "fileExtensions": [
    "java", "tal",
    "ts", "tsx", "js", "jsx", "py", "c", "cpp", "h", "hpp",
    "cs", "go", "rs", "rb", "php", "swift", "kt", "scala", "sql",
    "cbl", "cob", "cobol", "pli", "md", "json", "yaml", "yml"
  ],
  "excludePattern": "**/node_modules/**",
  "llm": {
    "preferredModel": "claude",
    "preferredVariant": "sonnet",
    "maxContextLength": 10000
  }
}
