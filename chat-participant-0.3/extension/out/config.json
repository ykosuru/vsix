{
  "index": {
    "maxFileSize": 500000,
    "maxResults": 200,
    "contextLines": 3,
    "buildCallIndex": true,
    "excludePatterns": [
      "node_modules",
      "\\.min\\.js$",
      "\\.map$",
      "dist/",
      "build/"
    ]
  },
  "search": {
    "maxResults": 50,
    "maxKeywords": 5,
    "maxFilesPerQuery": 5000
  },
  "fileExtensions": [
    "ts", "tsx", "js", "jsx", "py", "java", "c", "cpp", "h", "hpp",
    "cs", "go", "rs", "rb", "php", "swift", "kt", "scala", "sql",
    "tal", "cbl", "cob", "cobol", "pli", "md", "json", "yaml", "yml"
  ],
  "excludePattern": "**/node_modules/**",
  "llm": {
    "preferredModel": "claude",
    "preferredVariant": "sonnet",
    "maxContextLength": 10000
  }
}
