{
  "name": "astracode",
  "displayName": "AstraCode",
  "publisher": "your-publisher-id",
  "version": "0.5.0",
  "description": "AI-powered code analysis for legacy system modernization",
  "main": "extension.js",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Chat"],
  "activationEvents": [
    "onChatParticipant:astracode.chat"
  ],
  "contributes": {
    "chatParticipants": [
      {
        "id": "astracode.chat",
        "name": "astra",
        "fullName": "AstraCode",
        "description": "Code analysis and documentation",
        "isSticky": true,
        "commands": [
          { "name": "find", "description": "Search for code" },
          { "name": "describe", "description": "Describe code functionality" },
          { "name": "deepwiki", "description": "Generate DeepWiki documentation" },
          { "name": "translate", "description": "Translate code to Java" },
          { "name": "requirements", "description": "Extract requirements (Gherkin)" },
          { "name": "domain", "description": "Run domain-specific analysis" },
          { "name": "domains", "description": "List domain prompts" },
          { "name": "fediso", "description": "Fed ISO 20022 analysis" },
          { "name": "history", "description": "View query history" },
          { "name": "generated", "description": "List generated files" },
          { "name": "clean", "description": "Delete generated files" },
          { "name": "docs", "description": "Document indexing status" },
          { "name": "stats", "description": "Index statistics" },
          { "name": "clear", "description": "Clear index" },
          { "name": "rebuild", "description": "Rebuild index" },
          { "name": "help", "description": "Show help" }
        ]
      }
    ]
  }
}
