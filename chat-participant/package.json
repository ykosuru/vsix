{
  "name": "astracode-copilot",
  "displayName": "AstraCode for Copilot Chat",
  "description": "Code search with function call tracking for GitHub Copilot Chat",
  "version": "0.7.0",
  "publisher": "astracode",
  "engines": {
    "vscode": "^1.90.0"
  },
  "extensionDependencies": [
    "github.copilot-chat"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "categories": [
    "Programming Languages",
    "Chat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "astracode.chat",
        "name": "astra",
        "fullName": "AstraCode",
        "description": "Search code with function call tracking - answers 'who calls X?' queries",
        "isSticky": false,
        "commands": [
          {
            "name": "find",
            "description": "Search for code by keyword"
          },
          {
            "name": "describe",
            "description": "Describe functionality of code"
          },
          {
            "name": "translate",
            "description": "Translate TAL to Java"
          },
          {
            "name": "fediso",
            "description": "Uplift to Fed ISO 20022"
          },
          {
            "name": "domain",
            "description": "Run domain-specific analysis (e.g., /domain swift)"
          },
          {
            "name": "domains",
            "description": "List available domain prompts"
          },
          {
            "name": "requirements",
            "description": "Extract business requirements from code"
          },
          {
            "name": "extract",
            "description": "Alias for /requirements"
          },
          {
            "name": "stats",
            "description": "Show index statistics"
          },
          {
            "name": "clear",
            "description": "Clear index (fresh start, no accumulated context)"
          },
          {
            "name": "rebuild",
            "description": "Force rebuild the code index"
          },
          {
            "name": "help",
            "description": "Show help and usage"
          },
          {
            "name": "history",
            "description": "View last 25 queries and results"
          },
          {
            "name": "use",
            "description": "Reuse results from history (e.g., /use #5)"
          }
        ]
      }
    ]
  }
}
